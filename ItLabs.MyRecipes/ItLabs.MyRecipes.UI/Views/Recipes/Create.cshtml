    <script type="text/javascript">
        $(function () {
            debugger;
            $("#ingredientsName").autocomplete({
                source: '@Url.Action("GetIngredients")'
            });
        });
    </script>
@Scripts.Render("~/Scripts/MyScripts/RecipesSave.js")
}


